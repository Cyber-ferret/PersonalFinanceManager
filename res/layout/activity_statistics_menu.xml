<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <Button
        android:id="@+id/view_spending_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_spending_history" 
        android:onClick="openSelected"/>

     <Button
        android:id="@+id/spending_habits"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_spending_habits" 
        android:onClick="openSelected"/>
     
     <Button
        android:id="@+id/bill_due_dates"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_bill_due_dates" 
        android:onClick="openSelected"/>
     
     <Button
        android:id="@+id/view_daily_allowance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_daily_allowance" 
        android:onClick="openSelected"/>

</LinearLayout>
