<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:orientation="horizontal" >
    
    <Spinner
        android:id="@+id/spending_category"
	    android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:textSize="24sp" />
    
    <TextView 
        android:id="@+id/display_value"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="" />
    
    <Button android:text="@string/text_1" 
        android:onClick="keyPress"/>
	<Button android:text="@string/text_2"
        android:onClick="keyPress" />
	<Button android:text="@string/text_3"
        android:onClick="keyPress" />
	<Button android:text="@string/text_4"
        android:onClick="keyPress" />
	<Button android:text="@string/text_5"
        android:onClick="keyPress" />
	<Button android:text="@string/text_6"
        android:onClick="keyPress" />
	<Button android:text="@string/text_7"
        android:onClick="keyPress" />
	<Button android:text="@string/text_8"
        android:onClick="keyPress" />
	<Button android:text="@string/text_9"
        android:onClick="keyPress" />
	<Button android:text="@string/text_."
        android:onClick="keyPress" />
	<Button android:text="@string/text_0"
        android:onClick="keyPress" />
	<Button android:text="@string/text_C" 
	    android:onClick="keyPress" />
	<Button
        android:layout_gravity="fill"
        android:layout_columnSpan="3"
        android:text="@string/text_add_charge" 
        android:onClick="deductFunds"/>
</GridLayout>